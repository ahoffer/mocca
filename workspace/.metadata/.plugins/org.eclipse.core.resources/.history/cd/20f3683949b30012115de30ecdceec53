package weka.subspaceClusterer;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.io.Writer;

import weka.core.Instances;

public class Out {

    public static void print(PrintWriter writer, Instances data) {
        Instances copy = new Instances(data);

        writer.println(copy.relationName());

        for (int i = 0; i < copy.numClasses(); ++i) {

            writer.printf("class %d  [", i);

            for (int j = 0; j < copy.numInstances(); ++j) {

                if (i == (int) copy.instance(j).classValue()) {

                    writer.printf("%d, ", j);

                }// if

            }// for j

            writer.printf("]\n");

        } // for i
    }// method

    public static void getTrueFile(String filename, Instances data) {

        PrintWriter pw = null;

        try {

            pw = new PrintWriter(new FileWriter(filename));

            pw.flush();
        }

        catch (IOException e) {
            e.printStackTrace();
        } finally {

            // Close the PrintWriter
            if (pw != null)
                pw.close();

        }

    }

} // class
